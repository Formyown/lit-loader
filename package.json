{
  "name": "lit-loader",
  "version": "0.0.2",
  "description": "LitElement Single File Component loader for Webpack",
  "license": "MIT",
  "repository": "PolymerX/lit-loader",
  "bugs": {
    "url": "https://github.com/PolymerX/lit-loader/issues",
    "email": "info@godev.space"
  },
  "homepage": "https://github.com/PolymerX/lit-loader",
  "author": {
    "name": "LasaleFamine <Alessio Occhipinti>",
    "email": "info@godev.space",
    "url": "godev.space"
  },
  "main": "src/index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "release": "git pull && standard-version",
    "test": "xo && nyc ava test/*.test.js",
    "test:travis": "yarn test && nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "files": [
    "src"
  ],
  "keywords": [
    "lit-loader",
    "LitElement",
    "lit-element-loader",
    "lit-element-postcss",
    "lit-element-babel",
    "lit-element-webpack",
    "polymer-lit"
  ],
  "dependencies": {
    "jscodeshift": "0.5.1",
    "loader-utils": "1.1.0",
    "parse5": "5.0.0",
    "postcss": "7.0.0",
    "postcss-load-config": "2.0.0"
  },
  "devDependencies": {
    "ava": "1.0.0-beta.4",
    "codecov": "3.0.4",
    "nyc": "12.0.2",
    "standard-version": "4.4.0",
    "xo": "0.21.1"
  },
  "peerDependencies": {
    "webpack": "^4"
  },
  "xo": {
    "rules": {
      "max-len": [
        "error",
        {
          "code": 120,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off"
    }
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
